<div class="jumbotron">
  <h2>Shop directly from people around the world.</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %><br>
          <div class="caption">
            <h3><%= link_to "#{listing.name}", listing %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Listed by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
